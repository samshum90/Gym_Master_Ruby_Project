<h1>New Class</h1>

<form action="/groupexercises" method="post">

    <div class>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div class>
          <label for="instructor_id">Instructor:</label>
            <select name="instructor_id" id="instructor_id">
                <% for instructor in @instructor %>
                <option value="<%= instructor.id %>"><%= instructor.format_name %></option>
                <% end %>
              </select>
            </div>

    <div class>
      <label for="set_date">Date:</label>
      <input type="date" name="set_date" id="set_date"/>
    </div>

    <div class>
      <label for="start_time">Start Time:</label>
      <input type="time" name="start_time" id="start_time"/>
    </div>

    <div class>
      <label for="price">Price:</label>
      <input type="number" name="price" id="price"/>
    </div>

    <div class>
      <label for="capacity">Capacity:</label>
      <input type="number" name="capacity" id="capacity"/>
    </div>




  <input class type='submit' value="Create">
</form>
