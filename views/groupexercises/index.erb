<h1>Classes</h1>
<a href="/groupexercises/new">
  <input type="submit" value="create">
</a>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Date</th>
    <th></th>
    <th>Start Time</th>
    <th></th>
    <th>Price</th>
    <th></th>
    <th>Capacity</th>
    <th></th>
    <th>Number Booked</th>
    <th></th>
    <th>Membership Needed</th>
  </tr>
  <% for group in @group %>
  <tr>
    <td><a href="/groupexercises/<%= group.id %>"><%= group.name %></a></td>
    <td>|</td>
    <td><%= group.set_date.strftime("%d/%m/%Y") %></td>
    <td>|</td>
    <td><%= group.start_time %></td>
    <td>|</td>
    <td><%= group.price %></td>
    <td>|</td>
    <td><%= group.capacity %></td>
    <td>|</td>
    <td><%= group.booked %></td>
    <td>|</td>
    <td><%= group.membership_needed_check %></td>
    <td>|</td>
    <td>
    <form action="/groupexercises/<%= group.id %>/delete" method="POST">
      <input type="submit" value="delete">
    </form>
    </td>
    <td>
      <a href="/groupexercises/<%= group.id %>/edit">
        <input type="submit" value="edit">
      </a>
    </td>
  </tr>
  <% end %>
</table>
