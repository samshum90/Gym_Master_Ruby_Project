<h2>Instructors</h2>
<a href="/instructors/new">
  <input type="submit" value="create">
</a>
<br>
<br>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Speciality</th>
  </tr>
  <% for instructor in @instructors.uniq %>
    <tr>
      <td>
        <a class= "link" href="/instructors/<%= instructor.id %>"><%= instructor.format_name %></a>
      </td>
      <td>|</td>
      <td><%= instructor.speciality %></td>
      <td>|</td>
      <td>
        <form action="/instructors/<%= instructor.id %>/delete" method="POST">
          <input type="submit" value="delete">
        </form>
      </td>
      <td>
        <a href="/instructors/<%= instructor.id %>/edit" method="GET">
          <input type="submit" value="edit">
        </a>
      </td>
    </tr>
  <% end %>
</table>
