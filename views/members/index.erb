<h1>Members</h1>
<a href="/members/new">
  <input type="submit" value="create">
</a>
<br>
<br>

<table>
  <tr>
    <th>Active Members</th>
  </tr>
  <tr>
    <td>Name</td>
    <td></td>
    <td>Date Of Birth</td>
    <td></td>
    <td>Membership Type</td>
  </tr>
  <% for member in @members %>
  <% if member.membership_status == "Active" %>
    <tr>
      <td>
        <a href="/members/<%= member.id %>"><%= member.format_name %></a>
      </td>
      <td>|</td>
      <td><%= member.date_of_birth.strftime("%d/%m/%Y") %></td>
      <td>|</td>
      <td><%= member.membership_type %></td>
      <td>|</td>
      <td>
      </td>
      <td>
        <a href="/members/<%= member.id %>/edit" >
          <input type="submit" value="Edit">
        </a>
      </td>
      <td>
        <form action="/members/<%= member.id %>/deactivate" method="POST">
          <input type="submit" value="Deactivate">
        </form>
      </td>
      <td>
        <form action="/members/<%= member.id %>/delete" method="POST">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
  <% end %>
  <% end %>
</table>


<br>
<br>
<table>
  <tr>
    <th>Deactived Members</th>
  </tr>
  <tr>
    <td>Name</td>
    <td></td>
    <td>Date Of Birth</td>
    <td></td>
    <td>Membership Type</td>
  </tr>
  <% for member in @members %>
